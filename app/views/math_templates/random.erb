<%if params[:user_max] == nil%>
    <form action="/random/results">
  <div>
    <label for="min_input">Minimum</label>
    <input type="text" id="min_input" name="user_min" placeholder="E.g. 1.5">
  </div>
  <div>
    <label for="max_input">Maximum</label>
    <input type="text" id="max_input" name="user_max" placeholder="E.g.4.5">
  </div>

  <div>
  <Button>Pick random number</Button>
  </div>

  </form>
<%else%>
  <H1>Random Results</H1>
  <dl>
  <dt>Minimum</dt>
  <dd><%= @min %></dd>
  <dt>Maximum</dt>
  <dd><%= @max %></dd>
  <dt>Random Number</dt>
  <dd><%= @result %></dd>
  </dl>
<%end%>
