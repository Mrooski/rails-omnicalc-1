<% if params[:number] == nil%>
  <form action="/square/results">
    <div>
      <label for="user_number">
        Enter a number
      </label>
    </div>
    <div>
      <input id = "user_number" type="text" name="number" placeholder="What number do you want to take the square of?">
    </div>
    <div>
      <button>Calculate square</button>
    </div>
  </form>

  <%else%>
  
  <h1>Square Results</h1>
  <dl>
    <dt>Number</dt>
    <dd>
      <%= @number %>
    </dd>
    <dt>Square Results</dt>
    <dd>
    <%= @output %>
    </dd>
  </dl>

  <a href="/square/new">Calculate another square</a>

<%end%>
